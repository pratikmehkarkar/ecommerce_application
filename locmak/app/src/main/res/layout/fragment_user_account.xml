<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/first"
        android:layout_height="265dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/imglogo"
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/userlogo"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Pratik Mehkarkar"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
<RelativeLayout
    android:layout_below="@+id/first"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bckedit"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp">

        <TextView
            android:id="@+id/eml"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Registered E-mail"
            android:textSize="15dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/edeml"
            android:layout_below="@+id/eml"
            android:drawableLeft="@drawable/ic_email"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:paddingStart="4dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittextm"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"/>
        <TextView
            android:id="@+id/mbl"
            android:layout_below="@+id/edeml"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Mobile"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/embl"
            android:layout_below="@+id/mbl"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginTop="5dp"
            android:paddingStart="4dp"
            android:paddingRight="2dp"
            android:inputType="phone"
            android:paddingLeft="2dp"
            android:drawableLeft="@drawable/ic_local_phone"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittextm"/>
        <TextView
            android:id="@+id/pwd"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="New Password"
            android:textSize="15dp"
            android:layout_below="@+id/embl"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/npwd"
            android:layout_below="@+id/pwd"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:drawableLeft="@drawable/ic_https"
            android:layout_marginTop="5dp"
            android:paddingLeft="2dp"
            android:inputType="textPassword"
            android:paddingRight="2dp"
            android:paddingStart="4dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittextm"/>

        <ImageButton
            android:layout_width="114dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_below="@+id/npwd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/savbt"
            android:background="@android:color/transparent"
            />
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>
</ScrollView>