<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Summary"
        android:gravity="center"
        android:textSize="17dp"
        android:textStyle="bold"
        android:padding="6dp"
        android:id="@+id/tvordersummary"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        android:layout_below="@+id/tvordersummary"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:id="@+id/cvorderid">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvorderidlabel"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:padding="8dp"
            android:textColor="#000"
            android:layout_gravity="top"
            android:text="Order id  : " />
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            android:layout_below="@+id/cvorderid"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:id="@+id/cvshippingaddress">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvshippingaddresslabel"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:padding="8dp"
                android:textColor="#000"
                android:layout_gravity="top"
                android:inputType="textMultiLine"
                android:text="Shipping Address : " />
        </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cvshippingaddress"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:cardCornerRadius="3dp"
        android:id="@+id/cvtotal">

        <TextView
            android:id="@+id/tvtotallabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:padding="8dp"
            android:text="Order Total :  "
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvtoatl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="110dp"
            android:padding="8dp"
            android:text=""
            android:textColor="#f00"
            android:textSize="15dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cvtotal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:cardCornerRadius="3dp"
        android:id="@+id/cvpaymentmode">

        <TextView
            android:id="@+id/tvpaymentmodelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:padding="8dp"
            android:text="Payment Mode : "
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvpaymode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="120dp"
            android:padding="8dp"
            android:text="Cash on Delivery"
            android:textColor="#000"
            android:textSize="15dp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cvpaymentmode"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:cardCornerRadius="3dp"
        android:id="@+id/cvestimatedelivery">

        <TextView
            android:id="@+id/tvdeliverylabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:padding="8dp"
            android:text="Estimated Delivery : "
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvdeliverydate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="150dp"
            android:padding="8dp"
            android:text=""
            android:textColor="#000"
            android:textSize="15dp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cvestimatedelivery"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:cardCornerRadius="3dp"
        android:id="@+id/cvquantity">

        <TextView
            android:id="@+id/tvquantitylabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:padding="8dp"
            android:text="Quantity : "
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="80dp"
            android:padding="8dp"
            android:text=""
            android:textColor="#000"
            android:textSize="15dp"
            />
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="Place Your Order"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#fff"
        android:background="#FF5722"
        android:id="@+id/btnorder"/>

</RelativeLayout>