<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/productb">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/productb">
    <RelativeLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
    <LinearLayout
    android:orientation="vertical"
        android:id="@+id/cardone"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <android.support.v7.widget.CardView

    android:layout_width="match_parent"
    android:layout_height="288dp"
    app:cardCornerRadius="6dp">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/menstest"
        android:scaleType="fitCenter"
        android:layout_height="match_parent"
        android:id="@+id/imageview"
        android:padding="10dp"/>

</android.support.v7.widget.CardView>
    </LinearLayout>
        <RelativeLayout
            android:id="@+id/cardtwo"
        android:layout_below="@+id/cardone"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#323c3f"
                android:textSize="18dp"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:padding="5dp"
                android:text="New Product Tshirt"/>
            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#323c3f"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="#c5c5ca"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:text="RS.200"/>
        </android.support.v7.widget.CardView>

</RelativeLayout>
        <LinearLayout
            android:id="@+id/middle"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/cardtwo"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <android.support.v7.widget.CardView
                android:id="@+id/cardthree"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                app:cardCornerRadius="3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#323c3f"
                    android:textSize="15dp"
                    android:layout_gravity="top|center"
                    android:padding="5dp"
                    android:text="In Stock"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:paddingStart="25dp"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/stockbck"
                    android:layout_gravity="bottom|center"
                    android:paddingLeft="15dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardfour"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_height="90dp"
                app:cardCornerRadius="3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#323c3f"
                    android:textSize="15dp"
                    android:layout_gravity="top|center"
                    android:padding="5dp"
                    android:text="Select Size"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:paddingStart="25dp"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/stockbck"
                    android:layout_gravity="bottom|center"
                    android:paddingLeft="15dp" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/middle"
            android:layout_marginTop="12dp">
            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="288dp"
                app:cardCornerRadius="3dp">

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
   <RelativeLayout
       android:background="@color/colorPrimary"
       android:layout_height="64dp"
       android:layout_width="match_parent"
       android:layout_alignParentBottom="true" >
       <LinearLayout
           android:layout_height="match_parent"
           android:layout_width="match_parent">
       <ImageButton
           android:layout_gravity="center"
           android:layout_width="0dp"
           android:layout_weight=".5"
           android:background="@android:color/transparent"
           android:layout_height="wrap_content"
           android:src="@drawable/btnbuy"/>
       <ImageButton
           android:layout_gravity="center"
           android:layout_width="0dp"
           android:layout_weight=".5"
           android:background="@android:color/transparent"
           android:layout_height="wrap_content"
           android:src="@drawable/btncart"/>
       </LinearLayout>
   </RelativeLayout>

</RelativeLayout>